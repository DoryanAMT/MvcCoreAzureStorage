@model IEnumerable<MvcCoreAzureStorage.Models.BlobModel>

@{
    ViewData["Title"] = "ListBlobs";
}

<h1>ListBlobs</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Container)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <a asp-controller="AzureBlobs"
                       asp-action="DeleteBlob"
                       asp-route-containername="@item.Container"
                       asp-route-blobname="@item.Nombre"
                       class="btn btn-danger">
                        Delete blob: <b>@item.Nombre</b>
                    </a>
            </td>
            <td>
                <a href="@item.Url" target="_blank">imagen</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Container)
            </td>
            <td>
                <img src="@item.Url" style="width:70px; height: 70px" />
            </td>
        </tr>
}
    </tbody>
</table>
